{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Initialize",
            "group": "build",
            "type": "shell",
            "command": "./init/init.sh"
        },
        {
            "label": "Deploy infrastructure",
            "group": "build",
            "type": "shell",
            "dependsOn":["Initialize"],
            "command": "kubectl apply -f infrastructure/k8s"
        },
        {
            "label": "Deploy monitoring",
            "group": "build",
            "type": "shell",
            "dependsOn":["Initialize"],
            "command": "kubectl apply -f monitoring/k8s"
        },
        {
            "label": "Deploy everything",
            "group": "build",
            "dependsOn":["Deploy infrastructure", "Deploy monitoring"]
        },
        {   "label": "Delete everything",
            "group": "build",
            "type": "shell",
            "command": "kubectl delete deployments,pods,services,secrets,configmaps,replicasets,statefulsets,daemonsets,ingresses,jobs,cronjobs --all"
        }
  ]
}
