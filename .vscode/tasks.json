{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Initialize",
            "group": "build",
            "type": "shell",
            "command": "./init/env-files.sh"
        },
        {
            "label": "Deploy infrastructure",
            "group": "build",
            "type": "shell",
            "dependsOn":["Initialize"],
            "command": "kubectl apply -f infrastructure/k8s"
        },
        {
            "label": "Deploy monitoring",
            "group": "build",
            "type": "shell",
            "dependsOn":["Initialize"],
            "command": "kubectl apply -f monitoring/k8s"
        },
        {
            "label": "Deploy everything",
            "group": "build",
            "dependsOn":["Deploy infrastructure", "Deploy monitoring"]
        },
  ]
}
